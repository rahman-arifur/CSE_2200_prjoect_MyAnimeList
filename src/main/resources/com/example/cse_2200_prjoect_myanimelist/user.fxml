<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cse_2200_prjoect_myanimelist.User">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Dashboard" />
        <Button fx:id="logoutButton" layoutX="500.0" layoutY="30.0" onAction="#handleLogoutButtonAction" text="Logout" />
        <Button fx:id="addAnimeButton" layoutX="400.0" layoutY="30.0" onAction="#handleAddAnimeButtonAction" text="Add Anime" />
        <TableView fx:id="animeTable" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="80.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="ratingColumn" prefWidth="100.0" text="Rating" />
                <TableColumn fx:id="episodesColumn" prefWidth="100.0" text="Episodes" />
                <TableColumn fx:id="releaseYearColumn" prefWidth="100.0" text="Release Year" />
                <TableColumn fx:id="genreColumn" prefWidth="150.0" text="Genre" />
            </columns>
        </TableView>
      <Button layoutX="341.0" layoutY="30.0" mnemonicParsing="false" onAction="#handleRefreshButtonAction" text="Refresh" />
    </children>
</AnchorPane>
